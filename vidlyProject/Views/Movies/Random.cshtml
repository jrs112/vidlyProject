@model vidlyProject.ViewModels.MovieViewModel
@{
    ViewBag.Title = "Random";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>
@Html.ActionLink("New Movie", "NewMovie", "Movies", new { @class = "btn btn-primary" })

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Movie Name</th>
            <th>Genre</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model.MovieList)
        {


            if (!string.IsNullOrEmpty(movie.Name))
            {
                <tr>
                    <td>@Html.ActionLink(movie.Name, "ViewMovie", "Movies", new { id = movie.Id }, null)</td>
                    <td>@movie.Genre.Name</td>
                </tr>

            }
        }
    </tbody>
</table>




